@page
@model PIS_Web.Pages.Personnel.DashboardModel
@{
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar2 py-4">
            <h4 class="px-4 text-center">حساب کاربری</h4>
            <div class="text-center py-4">
                <img src="?handler=Image" alt="عکس پروفایل" class="rounded-circle" width="100" height="120">
                <p class="mb-1 mt-1">@User.Identity.Name</p>
                <p class="text-muted small"></p>
            </div>
            <div class="px-4 text-center">               
                <a href="#" class="d-block py-2 active border mb-2">
                    <i class="fa fa-address-book" aria-hidden="true"></i> پروفایل
                </a>         
                <a href="#" class="d-block py-2 border mb-2">
                    <i class="fa fa-graduation-cap" aria-hidden="true"></i> رزومه
                </a>
                <a href="#" class="d-block py-2 border mb-2">
                    <i class="fa fa-history" aria-hidden="true"></i>  کارکرد روزانه
                </a>
                <a href="#" class="d-block py-2 border mb-2">
                    <i class="fa fa-handshake-o" aria-hidden="true"></i> درخواست مرخصی
                </a>
                <a href="#" class="d-block py-2 border mb-2">
                    <i class="fa fa-car" aria-hidden="true"></i> درخواست ماموریت
                </a>
                <a href="#" class="d-block py-2 border mb-2">
                    <i class="fa fa-edit" aria-hidden="true"></i>  کارتابل مرخصی/ماموریت
                </a>
            </div>
        </div>
        <!-- Content Section -->
        <div class="col-md-9">
            <div class="content-section">
                <div class="d-flex justify-content-between align-items-center">
                    <h4></h4>
                    <h4 class="">اطلاعات شخصی</h4>
                    <h4></h4>
                </div>
                <!-- Info Cards -->
                <div class="row g-4 mt-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>نام و نام خانوادگی</h6>
                            <span>@(User.Identity.Name ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                <div class="info-card">
                        <h6>نام پدر</h6>
                            <span>@(Model?.Person?.FatherName ?? string.Empty)</span>
                    </div>
                </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>شماره شناسنامه</h6>
                            <span>@(Model?.Person?.NationalID ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>کد ملی</h6>
                            <span>@(Model?.Person?.NationalID ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>تاریخ تولد</h6>
                            <span>@(Model?.Person?.RegDate ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>محل تولد</h6>
                            <span>@(Model?.Person?.BornPlaceDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>تابعیت</h6>
                            <span>@(Model?.Person?.CitizenshipDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>وضعیت تاهل</h6>
                            <span>@(Model?.Person?.FamilyStatusDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>جنسیت</h6>
                            <span>@(Model?.Person?.SexTypeDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>وضعیت نظام وظیفه</h6>
                            <span>@(Model?.Person?.MilitaryTypeDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>وضعیت شغلی در شرکت</h6>
                            <span>@(Model?.Person?.JobStatusDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>وضعیت کاری در شرکت</h6>
                            <span>@(Model?.Person?.StatusDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>مشمولیت بیمه در شرکت</h6>
                            <span>@(Model?.Person?.InsuranceStatusDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>استفاده در رتبه بندی شرکت</h6>
                            <span>@(Model?.Person?.IsUseRankingDs ?? string.Empty)</span>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="content-section">
                <div class="d-flex justify-content-between align-items-center">
                    <h4></h4>
                    <h4 class="">اطلاعات تماس</h4>
                    <h4></h4>
                </div>
                <!-- Info Cards -->
                <div class="row g-4 mt-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>نوع محل سکونت</h6>
                            <span>@(Model?.Person?.ResidenceTypeDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>کشور/شهر</h6>
                            <span>@(Model?.Person?.GeographicalLocationDS ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>نشانی</h6>
                            <span>@(Model?.Person?.Address ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>کد پستی</h6>
                            <span>@(Model?.Person?.ZipCode ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>تلفن</h6>
                            <span>@(Model?.Person?.Mobile ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>موبایل</h6>
                            <span>@(Model?.Person?.Mobile ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>ایمیل اصلی</h6>
                            <span>@(Model?.Person?.Email ?? string.Empty)</span>
                        </div>
                    </div>                 
                </div>
            </div>
            <div class="content-section">
                <div class="d-flex justify-content-between align-items-center">
                    <h4></h4>
                    <h4 class="">اطلاعات بانکی</h4>
                    <h4></h4>
                </div>
                <!-- Info Cards -->
                <div class="row g-4 mt-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>شعبه بانک</h6>
                            <span>@(Model?.Person?.BankBranchDs ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>شماره حساب بانک</h6>
                            <span>@(Model?.Person?.BankCardNo ?? string.Empty)</span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>شماره کارت بانکی</h6>
                            <span></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="info-card">
                            <h6>شماره شبا</h6>
                            <span>@(Model?.Person?.SHEBA ?? string.Empty)</span>
                        </div>
                    </div>                                    
                </div>
            </div>
        </div>       
    </div>
</div>